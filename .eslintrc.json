{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "json"
  ],
  "rules": {
    "indent": ["error",2],
    "keyword-spacing": "error",
    "linebreak-style": "error",
    "no-extra-boolean-cast": "off",
    "quotes": ["error","single"],
    "semi": "error",
    "space-before-blocks": "error",
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always" }
    ],
    "no-undef": "off",
    "no-unused-vars": "off"
  }
}